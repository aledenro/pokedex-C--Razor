@page
@model PokedexWeb.Pages.Views.LoginModel
@{

    <main id="login" class="container mt-4">
        <div class="d-flex align-items-center">
            <div id="dialogbox" class="row">
                <div class="col-10 p-3 mx-auto">
                    <h1 class="text-center mb-4">Iniciar Sesion</h1>
                    <form class="m-2 needs-validation" method="post">
                        <div class="form-group text-start">
                            <label class="form-label text-start">Correo Electrónico</label>
                            <input placeholder="name@address.com" type="email" class="form-control">
                        </div>
                        <div class="form-group text-start mt-2">
                            <label class="form-label">Contraseña</label>
                            <input placeholder="Ingresa tú contraseña" type="password" class="form-control">

                            <div class="col-auto text-end mt-2">
                                <a class="small text-body-secondary form-text text-end" href="/password-reset">Olvidaste tu contraseña?</a>
                            </div>
                        </div>
                        <button type="button" class="w-100 my-3 btn btn-primary">Entrar</button>
                        <p class="text-center"><small class="text-body-secondary text-center">Aún no tienes una cuenta? <a href="/Views/Registro">Regístrate</a>.</small></p>

                    </form>
                </div>

            </div>
        </div>
        

    </main>

}
