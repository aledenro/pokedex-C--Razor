@page
@model PokedexWeb.Pages.Views.Pokemon.AgregarModel
@{
    ViewData["Title"] = "Agregar Pokémon";
}


<h1 class="text-center my-3">Agregar Pokémon</h1>
<div class="mx-5">
    <div class="row  d-flex justify-content-center">
        <form class="mt-4 col-10"  method="post">

            <div class="mb-3">
                <label for="nombre" class="form-label">Nombre del Pokémon</label>
                <input type="text" class="form-control" id="nombre" name="nombre" placeholder="Ej. Pikachu, Eevee, Mewtwo" required>
            </div>
            <div class="row">
                <div class="col mb-3">
                    <label for="tipo" class="form-label">Tipo:</label>
                    <select class="form-select" data-coreui-search="true" required id="tipo" asp-for="IdsTipos" multiple>
                        @foreach (var tipo in Model.Tipos)
                        {
                            <option value="@tipo.id_tipo">@tipo.nombre</option>
                        }
                    </select>
                </div>
                <div class="col mb-3">
                    <label for="debilidad" class="form-label">Habilidad:</label>

                    <select class="form-select" data-coreui-search="true" required id="habilidad" asp-for="IdsHabilidades" multiple>
                        @foreach (var habilidad in Model.Habilidades)
                        {
                            <option value="@habilidad.id_habilidad">@habilidad.nombre</option>
                        }
                    </select>
                </div>
            </div>
            <div class="row">
                <div class="col mb-3">
                    <label for="altura" class="form-label">Altura:</label>
                    <input type="number" class="form-control" id="altura" name="altura" required>
                </div>
                <div class="col mb-3">
                    <label for="peso" class="form-label">Peso:</label>
                    <input type="number" class="form-control" id="peso" name="peso" required>
                </div>
            </div>
            <div class="d-flex justify-content-end">
                <button class="button-blue text-white py-2 mb-3" type="submit">
                    Agregar
                </button>
            </div>

        </form>
    </div>
</div>
